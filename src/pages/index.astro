import ContentLayout from "../layouts/ContentLayout.astro";
import Heading from "../components/Heading.astro";
import MainVisual from "../components/MainVisual.astro";
import Section from "../layouts/Section.astro";
---

<BaseLayout>
  <MainVisual />
  <Section bgGray id="about">
    <ContentLayout size="s">
      <Heading center>About</Heading>
      <p class="text">comming soon...</p>
    </ContentLayout>
  </Section>
  <Section id="skill">
    <ContentLayout size="s">
      <Heading center>Skill</Heading>
      <p class="text">comming soon...</p>
    </ContentLayout>
  </Section>
  <Section id="contact">
    <ContentLayout size="s">
      <Heading center>Contact</Heading>
      <p class="text">
        お問い合わせは<a
          href="https://www.twitter.com/miku__daifuku"
          class="link"
          target="_blank">Twiiter</a
        >のDMよりご連絡ください。
