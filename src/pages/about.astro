---
import BaseLayout from "../layouts/BaseLayout.astro";
import Section from "../layouts/Section.astro";
import ContentLayout from "../layouts/ContentLayout.astro";
import { Heading } from "../components/Heading/Heading";
import { Image } from "astro:assets";
import { FontAwesomeIcon } from "@fortawesome/react-fontawesome";
import { faInstagram } from "@fortawesome/free-brands-svg-icons";
import img01 from "../assets/images/about/img01.png";
import img02 from "../assets/images/about/img02.png";
import img03 from "../assets/images/about/img03.png";

const pageTitle = "About me";
---

<BaseLayout underlayer pageTitle={pageTitle}>
  <Section>
    <ContentLayout size="s">
      <Heading as="h1">{pageTitle}</Heading>
      <div class="contents">
        <p>
          I'm Front End Engineer. I'm introvert ane basically warm-hearted
          person. <br /> I want to be a loving person.
        </p>
        <dl class="aboutDl">
          <dt>Like:</dt>
          <dd>Traveling abroad / Stroll / Reading / Eating / Musical Movies</dd>
          <dt>Countries visited so far</dt>
          <dd>
            South Korea / Philippines / Taiwan / Guam / Italy / New zealand /
            Australia / Canada
          </dd>
        </dl>
        <div class="aboutImage">
          <div>
            <Image src={img01} alt="" class="cover" />
          </div>
          <div>
            <Image src={img02} alt="" class="cover" />
          </div>
          <div>
            <Image src={img03} alt="" class="cover" />
          </div>
        </div>
        <!-- <p>
          <a
            href="https://www.instagram.com/miku_starrysky/"
            target="_blank"
            class="link"
          >
            <FontAwesomeIcon icon={faInstagram} className="icon" />I also have a
            travel instagram</a
          >
        </p> -->
      </div>
    </ContentLayout>
  </Section>

  <style lang="scss">
    .icon {
      margin-right: 8px;
    }
    .contents {
      & > p {
        &:not(:first-child) {
          margin-top: 24px;
        }
      }
    }

    .aboutDl {
      margin-top: 24px;
      display: grid;
      & > dt {
        text-transform: capitalize;
        &:nth-of-type(n + 2) {
          margin-top: 16px;
        }
      }
    }
    .aboutImage {
      margin-top: 40px;
      gap: 24px;
      display: grid;

      @include mq {
        grid-template-columns: repeat(3, 1fr);
      }

      > div {
        background: #000;
        height: 200px;
        border-radius: 20px;
        overflow: hidden;
      }
    }
  </style>
</BaseLayout>
