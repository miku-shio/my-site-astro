---
import { GlobalNavi } from "./GlobalNavi/GlobalNavi";
import logo from "../assets/images/logo.svg";
---

<p class="skipItem"><a href="#main">skip to main</a></p>
<header class="header">
  <div class="header__inner">
    <p class="header__logo">
      <a href="/"><img src={logo.src} alt="" width={100} height={100} />miku</a>
    </p>
    <GlobalNavi client:load />
  </div>
</header>

<style lang="scss">
  .header {
    position: fixed;
    z-index: 1;
    top: 0;
    left: 0;
    width: 100%;
    @include mq-sp {
      height: var(--headerHeight-sp);
    }
    @include mq {
      height: var(--headerHeight);
    }

    &::before {
      position: absolute;
      z-index: -1;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      content: "";
      display: inline-block;
      background: rgba(#fff, 0.5);
      backdrop-filter: blur(10px);
    }
  }

  .header__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
    @include mq-sp {
      padding: 0 16px;
    }
    @include mq {
      padding: 0 40px;
    }
  }

  .header__logo {
    a {
      display: flex;
      align-items: center;
      gap: 8px;
      font-size: 20px;
    }

    img {
      width: 40px;
    }
  }
</style>
