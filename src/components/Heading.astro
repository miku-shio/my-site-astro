---
interface Props {
  center?: boolean;
  Element?: "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
}

const { center = false, Element = "h2" } = Astro.props;
---

<Element class:list={["heading", { center: center }]}><slot /></Element>

<style lang="scss">
  .heading {
    font-weight: bold;
    line-height: 1.2;
    @include mq-sp {
      font-size: 40px;
    }
    @include mq {
      font-size: 64px;
    }
  }

  .center {
    text-align: center;
  }
</style>
