---
import { Icon } from "astro-iconify";
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  href: string;
  class?: string;
  attrs?: string;
}

const { href, ...attrs } = Astro.props;
---

<a href={href} {...attrs} class="link">
  <slot />
  {attrs.target && <Icon name="majesticons:arrow-up-line" class="icon" />}
</a>

<style lang="scss">
  .link {
    text-decoration: underline;

    @include hover {
      text-decoration: none;
    }
  }

  .icon {
    width: 24px;
    height: 100%;
    rotate: 45deg;
  }
</style>
